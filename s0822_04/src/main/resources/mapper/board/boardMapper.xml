<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.site.dao.BoardMapper">
  
	<!-- 게시글 전체 가져오기 -->
  <select id="findAll" resultType="com.site.dto.Board">
	select * from Board order by bgroup desc, bindent asc
  </select>
  <insert id="save">
  	insert into board values(
  		board_seq.nextval,#{btitle},#{bcontent},#{id},board_seq.currval,0,0,0,#{bfile},sysdate
  	
  	)
  	
  
  </insert>

</mapper>  